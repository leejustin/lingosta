{
  "devDependencies": {
    "typescript": "^5.0.4",
    "prettier": "^2.5.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build:common && npm run build:app",
    "build:common": "cd @lingosta/common && npm run build",
    "build:app": "cd app && npm run build",
    "start:api": "cd api && npm run start",
    "format": "npm run format:check && npm run format:fix",
    "format:check": "prettier --list-different './{api,common,app}/**/*.{js,ts,tsx}' './**/*.json'",
    "format:fix": "prettier --write './{api,common,app}/**/*.{js,ts,tsx}' './**/*.json'"
  }
}